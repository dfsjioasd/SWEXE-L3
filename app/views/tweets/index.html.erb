<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %><br>
<% @tweets.each do |tweet| %>
    <%= tweet.message %>
    <%= ((Time.current - tweet.tdate)/60).floor %>分前<br>
    <%= image_tag "/get_image/#{tweet.id}" %>
    <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
    <%= link_to '表示', "/tweets/#{tweet.id}" %>
    <%= link_to '編集', "/tweets/edit/#{tweet.id}" %><br>
<% end %>
<p><%= link_to '新規追加', '/tweets/new' %></p>